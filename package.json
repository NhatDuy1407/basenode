{
  "name": "basenode",
  "version": "1.0.0",
  "description": "the base framework by MEAN stack",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jasmine",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NhatDuy1407/basenode.git"
  },
  "keywords": [
    "basenode",
    "mean"
  ],
  "author": "nhatduy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NhatDuy1407/basenode/issues"
  },
  "homepage": "https://github.com/NhatDuy1407/basenode#readme",
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/winston": "^2.3.9",
    "@types/mongoose": "^5.0.18",
    "@types/bluebird": "^3.5.21",
    "@types/errorhandler": "^0.0.32",
    "nodemon": "^1.17.5"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "guid-typescript": "^1.0.7",
    "inversify": "^4.13.0",
    "mongodb": "^3.1.0",
    "mongoose": "^5.1.7",
    "reflect-metadata": "^0.1.12",
    "winston": "^3.0.0"
  }
}
